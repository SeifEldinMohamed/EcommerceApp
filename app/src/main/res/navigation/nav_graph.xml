<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/rigestrationFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.seif.ecommerceapp.ui.introfragment.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_introFragment_to_rigestrationFragment"
            app:destination="@id/rigestrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.seif.ecommerceapp.ui.loginfragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/rigestrationFragment"
        android:name="com.seif.ecommerceapp.ui.registrationfragment.RegistrationFragment"
        android:label="fragment_rigestration"
        tools:layout="@layout/fragment_registration" />
</navigation>